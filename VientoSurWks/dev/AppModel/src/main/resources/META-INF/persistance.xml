<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="wctemplatePU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.vientoSur.model.model.Category</class>
		<class>com.vientoSur.model.model.Inventory</class>
		<class>com.vientoSur.model.model.InventoryItem</class>
		<class>com.vientoSur.model.model.Picture</class>
		<class>com.vientoSur.model.model.Location</class>
		<class>com.vientoSur.model.model.User</class>
		<exclude-unlisted-classes />
		<properties>
		  <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
		  <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
		  <property name="hibernate.hbm2ddl.auto" value="none"/>
          <property name="hibernate.default_schema" value="public"/>
          <property name="hibernate.show_sql" value="true"/>
          <property name="hibernate.id.new_generator_mappings" value="true"/>
		</properties>
	</persistence-unit>
	
</persistence>